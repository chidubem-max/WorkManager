<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START WORK"/>

    <Button
        android:id="@+id/btnWorkStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORK STATUS"/>

    <Button
        android:id="@+id/btnResetStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET STATUS"/>

    <Button
        android:id="@+id/btnWorkUIThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORK ON UI THREAD"/>




</LinearLayout>